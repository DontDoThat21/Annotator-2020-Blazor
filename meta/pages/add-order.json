{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "User Name",
                              "component": "UserName",
                              "name": "UserNameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "UserName",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${order.UserName}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Order Date",
                              "component": "OrderDate",
                              "name": "OrderDateLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "DateTime?",
                              "dateFormat": "MM/dd/yyyy",
                              "type": "datepicker",
                              "name": "OrderDate",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${order.OrderDate}"
                            },
                            {
                              "type": "required-validator",
                              "name": "OrderDateRequiredValidator",
                              "component": "OrderDate",
                              "text": "OrderDate is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new Order!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Sample.createOrder",
                        "parameters": [
                          {
                            "name": "Order",
                            "value": "${order}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${order}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "data": "${order}",
                  "visible": "${order != null}",
                  "itemType": "Anno.Models.Sample.Order"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "order",
        "type": "set",
        "value": "new Anno.Models.Sample.Order()",
        "valueType": "Anno.Models.Sample.Order"
      }
    ]
  },
  "name": "Add Order",
  "layout": "Main"
}