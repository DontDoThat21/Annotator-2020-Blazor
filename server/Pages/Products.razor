@page "/products"
@layout MainLayout
@inherits Anno.Pages.ProductsComponent

@using Radzen
@using Radzen.Blazor
@using Anno.Models.Sample
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Products">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getProductsResult" Count="@getProductsCount" TItem="Anno.Models.Sample.Product" LoadData="@Grid0LoadData" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="Anno.Models.Sample.Product" Context="annoModelsSampleProduct" Property="Id" Title="Id">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Anno.Models.Sample.Product" Context="annoModelsSampleProduct" Property="ProductName" Title="Product Name">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Anno.Models.Sample.Product" Context="annoModelsSampleProduct" Property="ProductPrice" FormatString="{0:C}" Title="Product Price">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Anno.Models.Sample.Product" Context="annoModelsSampleProduct" Property="ProductPicture" Title="Product Picture">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Anno.Models.Sample.Product" Context="annoModelsSampleProduct" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="annoModelsSampleProduct">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, annoModelsSampleProduct))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
